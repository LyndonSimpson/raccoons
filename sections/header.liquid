<header>

    <link rel="stylesheet" href="{{ 'header.css' | asset_url }}">
    <div class="header-container">

        <!--hamburger menu-->
        <div class="left-menu">
            <div class="hamburger-menu">
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>

        <!--shop name -->
        <div class="shop-name">
            {{ section.settings.text }}
        </div>

        <!--translations menu-->
        <div class="right-menu">
            <button>
                <i class="fa fa-globe"></i>
            </button>
        </div>
    </div>

</header>

{% schema %}
    {
        "name": "header",
        "settings": [{
            "type": "text",
            "id": "text", 
            "label": "Header"
        }],
        "presets": [{ "name": "header section"}],
        "tag": "header",
        "class": "header-section",
        "limit": 1
    }
{% endschema %}

    

