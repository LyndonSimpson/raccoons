{% schema %}
    {
     "name": "footer",
     "settings": [
        {
          "type": "text",
          "id": "footer_text",
          "label": "Footer Text",
          "default": "© 2024 GALLET. All rights reserved."
        }
     ],
     "blocks": [
        {
          "type": "footer",
          "name": "Footer",
          "settings": [
            {
              "type": "text",
              "id": "footer_text",
              "label": "Footer Text",
              "default": "© 2024 GALLET. All rights reserved."
            }
          ]
        }
     ],
     "presets": [
        {
          "name": "Default Footer",
          "category": "Footer"
        }
     ]
    }
    {% endschema %}

<footer>
    <link rel="stylesheet" href="{{ 'footer.css' | asset_url }}">
    <div class="container">
        <div class="footer-nav">
            <ul>
                {% for link in linklists.footer-menu.links %}
                    <li>
                        <a href="{{ link.url }}">{{ link.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="footer-info">
            <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.</p>
            <p>
                {{ shop.brand.slogan }}
            </p>
            <ul class="social-links">
                <li><a href="{{ shop.social.facebook }}">Facebook</a></li>
                <li><a href="{{ shop.social.twitter }}">Twitter</a></li>
                <li><a href="{{ shop.social.instagram }}">Instagram</a></li>
            </ul>
        </div>
    </div>
</footer>