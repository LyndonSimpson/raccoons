/* General styles for the carousel container */
.collection-container {
    display: flex; /* Use Flexbox to align items in a row */
    flex-direction: row; /* Allow items to wrap onto multiple lines if necessary */
    justify-content: space-between; /* Ensure space between the items */
    padding: 20px; /* Add some padding around the section */
}

/* Styles for each product in the carousel */
.collection-carrousel .product-item {
    display: flex; /* Use Flexbox to align items in a column */
    flex-direction: column; /* Stack items vertically */
    align-items: center; /* Center items horizontally */
    width: 30%; /* Each product takes up 30% of the container width */
    margin-bottom: 20px; /* Add some space between each product */
}

/* Styles for the product image */
.collection-carrousel .product-item img {
    width: 100%; /* Image takes up the full width of the product item */
    height: auto; /* Maintain aspect ratio */
    object-fit: cover; /* Cover the area without stretching the image */
    position: relative; /* Positioning context for the "+" button */
}

/* Styles for the "+" button */
.collection-carrousel .product-item .show-product-button {
    position: absolute; /* Position the button absolutely within the image */
    top: 10px; /* Position from the top */
    right: 10px; /* Position from the right */
    background-color: #fff; /* Button background color */
    border: 2px solid #000; /* Button border */
    border-radius: 50%; /* Make the button circular */
    width: 40px; /* Button width */
    height: 40px; /* Button height */
    display: flex; /* Use Flexbox to center the "+" symbol */
    align-items: center; /* Center items vertically */
    justify-content: center; /* Center items horizontally */
    font-size: 20px; /* Increase font size for the "+" symbol */
}

/* Styles for the product title */
.collection-carrousel .product-item .product-title-carousel {
    margin-top: 10px; /* Add some space above the title */
    font-size: 18px; /* Increase font size for the title */
    text-align: center; /* Center the title */
}

/* Styles for the product price */
.collection-carrousel .product-item .product-price-carousel {
    margin-top: 5px; /* Add some space above the price */
    font-size: 16px; /* Increase font size for the price */
    text-align: center; /* Center the price */
}

/* Styles for the product description */
.collection-carrousel .product-item p {
    margin-top: 5px; /* Add some space above the description */
    font-size: 14px; /* Increase font size for the description */
    text-align: center; /* Center the description */
}