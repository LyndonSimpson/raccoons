/* General styles for the explore section */
.explore-section {
    position: relative; /* Positioning context for the overlay elements */
    background-image: url('{{ "explore-bg.jpg" | asset_url }}'); /* Use the image as the background */
    background-size: cover; /* Cover the entire section with the background image */
    background-position: center; /* Center the background image */
    height: 500px; /* Set a fixed height for the section */
    display: flex; /* Use Flexbox to align items */
    align-items: center; /* Center items vertically */
    justify-content: flex-start; /* Align items to the left */
    padding: 20px; /* Add some padding around the section */
}

/* Styles for the overlay container */
.explore-section .overlay-container {
    position: absolute; /* Position the overlay container absolutely within the section */
    top: 0; /* Align the overlay container to the top of the section */
    left: 0; /* Align the overlay container to the left of the section */
    width: 100%; /* Cover the entire width of the section */
    height: 100%; /* Cover the entire height of the section */
    display: flex; /* Use Flexbox to align items */
    flex-direction: column; /* Stack items vertically */
    align-items: flex-start; /* Align items to the left */
    justify-content: center; /* Center items vertically */
}

/* Styles for the title */
.explore-section .overlay-container h1 {
    color: black; /* Set the title color to white */
    margin-bottom: 20px; /* Add some space below the title */
}

/* Styles for the button */
.explore-section .overlay-container button {
    background-color: #000; /* Set the button background color to black */
    color: #fff; /* Set the button text color to white */
    border: none; /* Remove the default button border */
    padding: 10px 20px; /* Add padding to the button */
    cursor: pointer; /* Change the cursor to a pointer on hover */
}