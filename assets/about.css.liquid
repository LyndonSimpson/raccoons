/* basic CSS : not finished */

/* about section */
.about-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 3rem;
    margin-right: 8rem;
    /* background-image: url('../assets/watch3.jpg');  commented because trying to make the image administrable*/
}

/* image */
.about-div {
    width: 40%; 
    height: auto; 
    object-fit: cover; 
}

/* text container */
.about-container .about-text {
    width: 60%; 
    padding-left: 20px; 
    background-color: white;
}

/* title */
.about-container .about-text h2 {
    margin-top: 0; 
    color: #333; 
}

/* paragraph */
.about-container .about-text p {
    color: #666; 
}