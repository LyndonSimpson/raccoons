/* basic CSS : not finished */

/* about section */
.about-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
}

/* image */
.about-container img {
    width: 60%; 
    height: auto; 
    object-fit: cover; 
}

/* text container */
.about-container .about-text {
    width: 40%; 
    padding-left: 20px; 
}

/* title */
.about-container .about-text h2 {
    margin-top: 0; 
    color: #333; 
}

/* paragraph */
.about-container .about-text p {
    color: #666; 
}