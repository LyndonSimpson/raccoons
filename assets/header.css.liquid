/* Header container */
.header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem;
    padding-bottom: 5rem;
    background-color: grey;
    background-image: url('../assets/raccoons-bg.jpg');
}

/* Shop name */
.shop-name {
    font-size: 20px;
    color: white;
}

/* Menu buttons */
.left-menu button,
.right-menu button {
    background-color: white;
    border: none;
    color: black;
    cursor: pointer;
}

/* Hamburger Menu */
.hamburger-menu {
    display: inline-block;
    cursor: pointer;
}

.hamburger-menu div {
    width: 35px;
    height: 3px;
    background-color: white; /* Change the color as needed */
    margin: 6px 0;
    transition: 0.4s;
}

/* Change the appearance of the hamburger menu on hover */
.hamburger-menu:hover div {
    width: 40px;
}

/* Earth icon button */
.right-menu button {
    font-size: 20px;
    display: flex;
    flex-direction: row;
    padding: 0.01rem; /* Add some space for the icon */
    border-radius: 25px;
}

.translations {
    font-size: 15px;
    padding-left: 10px;
}

/* Add your icon styles here */
.fa-globe {
    /* Example: FontAwesome icon */
    font-size: 15px;
    padding: 17px;
}

/* Mobile view styles */
@media (max-width: 768px) {
    .shop-name,
    .hamburger-menu div {
        color: black;
    }

    .translations {
        display: none; /* Hide the text for translations */
    }

    .fa-globe {
        display: inline-block; /* Show the globe icon */
    }
}