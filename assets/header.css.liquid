@import url('https://fonts.googleapis.com/css2?family=Roboto, monospace:wght@400;700&display=swap');

/* Header container */
.header-container {
    font-family: 'Roboto', sans-serif;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem;
    padding-bottom: 5rem;
    background-color: grey;
    /* background-image: url('../assets/raccoons-bg.jpg'); commented to make it administrable */
}

/* Shop name */
.shop-name {
    font-size: 20px;
    color: white;
}

.shop-name-change {
    opacity: 0;
}

/* Menu buttons */
.left-menu button,
.right-menu button {
    background-color: white;
    border: none;
    color: black;
    cursor: pointer;
}

/* Hamburger Menu */
.hamburger-menu {
    cursor: pointer;
    display: inline-block; 
}

.hamburger-menu div {
    width: 35px;
    height: 2px;
    background-color: white; /* Change the color as needed */
    margin: 6px 0;
    transition: 0.4s;
}

/* Transition effect for the hamburger menu */
.hamburger-menu div:nth-child(1) {
    transform: rotate(0deg);
}

.hamburger-menu div:nth-child(2) {
    transform: rotate(0deg);
}

/* Transition effect for the hamburger menu when it changes */
.hamburger-menu.change div:nth-child(1) {
    transform: rotate(45deg);
}

.hamburger-menu.change div:nth-child(2) {
    transform: rotate(-45deg);
}

/* Dropdown menu styles */
.dropdown-menu {
    display: none;
    /* Other styles */
}

/* Earth icon button */
.right-menu button {
    font-size: 20px;
    display: flex;
    flex-direction: row;
    padding: 0.01rem; /* Add some space for the icon */
    border-radius: 25px;
    transition: color 0.3s ease;
}

.right-menu button:hover {
    color: #007bff;
}

.translations {
    font-size: 15px;
    padding-left: 10px;
}

/* Add your icon styles here */
.fa-globe {
    /* Example: FontAwesome icon */
    font-size: 15px;
    padding: 17px;
}

/* Mobile view styles */
@media (max-width: 768px) {
    .shop-name,
    .hamburger-menu div {
        color: black;
    }

    .translations {
        display: none; /* Hide the text for translations */
    }

    .fa-globe {
        display: inline-block; /* Show the globe icon */
    }
}