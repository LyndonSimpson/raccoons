/* Header container */
.header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    background-color: white; /* White background */
}

/* Shop name */
.shop-name {
    font-size: 24px;
    font-weight: bold;
    color: black; /* Black text color */
}

/* Menu buttons */
.left-menu button,
.right-menu button {
    background-color: transparent;
    border: none;
    color: black; /* Black text color */
    cursor: pointer;
}

/* Hamburger Menu */
.hamburger-menu {
    display: inline-block;
    cursor: pointer;
}

.hamburger-menu div {
    width: 35px;
    height: 5px;
    background-color: black; /* Change the color as needed */
    margin: 6px 0;
    transition: 0.4s;
}

/* Change the appearance of the hamburger menu on hover */
.hamburger-menu:hover div {
    width: 40px;
}

/* Earth icon button */
.right-menu button {
    padding-left: 10px; /* Add some space for the icon */
}

