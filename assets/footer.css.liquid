/* General styles for the footer */
.footer-container {
    display: flex; /* Use Flexbox to align items in a row */
    justify-content: space-between; /* Ensure space between the items */
    align-items: flex-start; /* Align items to the top */
    padding: 20px; /* Add some padding around the section */
}

/* Styles for the contact info container */
.contact-info {
    display: flex; /* Use Flexbox to align items in a column */
    flex-direction: column; /* Stack items vertically */
    align-items: flex-start; /* Align items to the left */
}

/* Styles for the footer nav menu */
.footer-nav-menu {
    display: flex; /* Use Flexbox to align items in a column */
    flex-direction: column; /* Stack items vertically */
    align-items: flex-start; /* Align items to the left */
}

/* Styles for the right side footer content */
.right-side-content-footer {
    display: flex; /* Use Flexbox to align items in a column */
    flex-direction: column; /* Stack items vertically */
    align-items: flex-start; /* Align items to the left */
}

/* Additional styles for text elements inside the footer */
.footer-container h1, .footer-container p, .footer-container a {
    color: #fff; /* Set the text color to white */
    margin-bottom: 10px; /* Add some space below the text elements */
}

/* Styles for the footer links */
.footer-nav-menu a {
    color: #fff; /* Set the link color to white */
    text-decoration: none; /* Remove the default link underline */
}

/* Styles for the footer links on hover */
.footer-nav-menu a:hover {
    text-decoration: underline; /* Add an underline on hover */
}